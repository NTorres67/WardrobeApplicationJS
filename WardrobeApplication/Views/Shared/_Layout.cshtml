<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Dress Hawai`i</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/WardrobeScript.js"></script>
</head>
<body @*onbeforeunload="return function2()"*@>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Dress Hawai`i", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Outfits", "Index", "Outfits")</li>
                </ul>

                <div class="dropdown">
                    <button onclick="myFunction()" class="dropbtn">Clothing/Accessory Options</button>
                    <div id="myDropdown" class="dropdown-content">
                        <a href="~/Tops/" target="_blank">Tops</a>
                        <a href="~/Bottoms/" target="_blank">Bottoms</a>
                        <a href="/Shoes/" target="_blank">Footware</a>
                        <a href="/Accessories/" target="_blank">Accessories</a>
                    </div>
                </div>   
                
                <div class="store">
                    <button onclick="letsShop()">Let's Shop</button>
                    
                </div>
                

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p class="layout">&copy; @DateTime.Now.Year - Dress Hawai`i</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
