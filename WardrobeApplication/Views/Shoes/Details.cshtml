<link href="~/Content/ShoesDetails.css" rel="stylesheet" />

@model WardrobeApplication.Models.Shoe

@{
    ViewBag.Title = "Details";
}

<div class="row">
    <div class="col">
        <p class="table-header">
            Footware Information
        </p>
    </div>
</div>
<hr />

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <div class="caption shoes-details">
            <p class="description">
                Description: @Html.DisplayFor(model => model.ShoeName)
            </p>
            <p>
                Image Location: @Html.DisplayFor(model => model.ShoePhoto)
            </p>
            <p>
                Colors/Patterns: @Html.DisplayFor(model => model.ShoeColor)
            </p>
            <p>
                Season Used: @Html.DisplayFor(model => model.Season.SeasonName)
            </p>
            <p>
                Occasion: @Html.DisplayFor(model => model.Occasion.OccasionName)
            </p>
        </div>
    </div>
</div>

<div class="row create">
    <div class="col create">
        @Html.ActionLink("Edit", "Edit", new { id = Model.ShoeID }) |
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>



