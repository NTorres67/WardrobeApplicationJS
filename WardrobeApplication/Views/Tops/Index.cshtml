<link href="~/Content/TopsIndex.css" rel="stylesheet" />
@model IEnumerable<WardrobeApplication.Models.Top>

@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col">
        <p class="table-header">
            Tops
        </p>
    </div>
</div>

<div class="row">
    <div class="col">
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
    </div>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="thumbnail tops-index">
                <div class="caption tops-index">
                    <p class="thumbnail-photo">
                        <img class="thumbnail-photo" src="@Html.DisplayFor(modelItem => item.TopPhoto)" width="100" height="100">
                    </p>
                    <p class="description">
                        @Html.DisplayFor(modelItem => item.TopName)
                    </p>
                    <p class="links">
                        @Html.ActionLink("Edit", "Edit", new { id = item.TopID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.TopID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.TopID })
                    </p>
                </div>
            </div>
        </div>
    }
</div>

       
